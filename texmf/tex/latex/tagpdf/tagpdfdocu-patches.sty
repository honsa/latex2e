\renewcommand\maketitle{%
   \tagstructbegin{tag=Title}
   \begin{center}%
   \let\thanks\footnote
   \makeatletter
   \huge \@title \par
   \vskip .5em
   \@author \par
   \vskip 1em%
   \@date \par
   \end{center}%
